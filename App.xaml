<Application x:Class="AGVDesktop.App"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Fonts and colors (Windows 11 / Fluent inspired) -->
        <FontFamily x:Key="AppFont">Segoe UI</FontFamily>
        <Color x:Key="AccentColor">#0A84FF</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FBFBFC" Offset="0" />
            <GradientStop Color="#F1F3F5" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E6E7EA" />
        <SolidColorBrush x:Key="MutedTextBrush" Color="#6B6E73" />

        <!-- Drop shadow for cards -->
        <DropShadowEffect x:Key="CardShadow" Color="#33000000" BlurRadius="12" ShadowDepth="2" />
        <DropShadowEffect x:Key="ButtonHoverShadow" Color="#22000000" BlurRadius="10" ShadowDepth="3" />

        <!-- Button hover/press visual tweaks applied to all button styles via base style -->
        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Setter Property="Effect" Value="{x:Null}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.98" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect" Value="{StaticResource ButtonHoverShadow}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary button style -->
        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,0" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary button style -->
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#111" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,0" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Titlebar buttons (small, hover glow) -->
        <Style x:Key="TitlebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect" Value="{StaticResource ButtonHoverShadow}" />
                    <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox/ComboBox default tweaks -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#111" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Padding" Value="6" />
        </Style>

        <!-- Small entrance animation for content -->
        <Storyboard x:Key="ContentEntrance">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" From="0" To="1" Duration="0:0:0.45" />
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="8" To="0" Duration="0:0:0.45" />
        </Storyboard>

        <!-- Titlebar small entrance animation -->
        <Storyboard x:Key="TitlebarEntrance">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" From="0" To="1" Duration="0:0:0.35" />
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="-6" To="0" Duration="0:0:0.35" />
        </Storyboard>

        <!-- Titlebar hover blur reveal -->
        <Storyboard x:Key="TitlebarHoverIn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)" To="3" Duration="0:0:0.18" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.18" />
        </Storyboard>

        <Storyboard x:Key="TitlebarHoverOut">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)" To="0" Duration="0:0:0.18" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.18" />
        </Storyboard>

        <!-- Primary/Secondary already inherit BaseButtonStyle via BasedOn above -->
    </Application.Resources>
</Application>
